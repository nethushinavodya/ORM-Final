<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="627.0" prefWidth="927.0" styleClass="dark-mode-pane" stylesheets="@css/login.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginFormController">
    <children>
        <Label layoutX="364.0" layoutY="88.0" prefHeight="90.0" prefWidth="210.0" styleClass="login-title" text="Login" />
        <TextField fx:id="txtUsername" layoutX="314.0" layoutY="218.0" prefHeight="40.0" prefWidth="300.0" promptText="Username" styleClass="login-field" />
        <PasswordField fx:id="txtPassword" layoutX="314.0" layoutY="278.0" prefHeight="40.0" prefWidth="300.0" promptText="Password" styleClass="login-field" />
        <Button fx:id="btnLogin" layoutX="314.0" layoutY="348.0" mnemonicParsing="false" onAction="#loginOnAction" prefHeight="40.0" prefWidth="300.0" styleClass="login-button" text="Login" />
        <Hyperlink fx:id="registerLink" layoutX="434.0" layoutY="408.0" onAction="#registrationOnAction" styleClass="register-link" text="Register " />

        <!-- Additional Text at the Bottom -->
        <Text fill="WHITE" layoutX="341.0" layoutY="590.0" styleClass="footer-text" text="Serenity Mental Health Therapy Center">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Text>
    </children>
</AnchorPane>
