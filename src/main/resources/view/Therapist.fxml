<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="648.0" prefWidth="872.0" styleClass="dark-mode-pane" stylesheets="@css/user_management.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TherapistManagementController">
    <children>
        <VBox alignment="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="572.0" prefWidth="772.0" spacing="10.0">
            <children>
                <Label styleClass="title-label" text="Therapist Management" />

                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="100.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="200.0" prefWidth="200.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="100.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="200.0" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="30.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" prefHeight="40.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Therapist ID:" />
                        <TextField fx:id="txtTherapistID" GridPane.columnIndex="1" />

                        <Label text="Name:" GridPane.rowIndex="1" />
                        <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Specialization:" GridPane.rowIndex="2" />
                        <TextField fx:id="txtSpecialization" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Contact Info:" GridPane.rowIndex="3" />
                        <TextField fx:id="txtContactInfo" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Therapy Program:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                        <ComboBox fx:id="therapyProgramCmb" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                        <Label text="Status:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <ComboBox fx:id="statusCmb" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </GridPane>

                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="btnAddTherapist" onAction="#addTherapist" prefWidth="120.0" text="Add" />
                        <Button fx:id="btnUpdateTherapist" onAction="#updateTherapist" prefWidth="120.0" text="Update" />
                        <Button fx:id="btnDeleteTherapist" onAction="#deleteTherapist" prefWidth="120.0" text="Delete" />
                        <Button fx:id="btnSearchTherapist" onAction="#searchTherapist" prefWidth="120.0" text="Search" />
                        <Button fx:id="btnClear" onAction="#clear" prefWidth="120.0" text="Clear" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" top="10.0" />
                    </padding>
                </HBox>

                <TableView fx:id="tblTherapists" onMouseClicked="#therapistTblClicked" prefHeight="300.0" prefWidth="750.0">
                    <columns>
                        <TableColumn fx:id="colTherapistID" prefWidth="100.0" text="Therapist ID" />
                        <TableColumn fx:id="colName" prefWidth="150.0" text="Name" />
                        <TableColumn fx:id="colSpecialization" prefWidth="150.0" text="Specialization" />
                        <TableColumn fx:id="colContactInfo" prefWidth="150.0" text="Contact Info" />
                        <TableColumn fx:id="colPrograms" prefWidth="200.0" text="Assigned Programs" />
                    </columns>
                </TableView>

                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="backBtn" onAction="#backOnAction" text="Back to Dashboard" />
                    </children>
                    <padding>
                        <Insets right="10.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>